<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thread_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/ripple_effect_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/thread_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/title_text_color"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/thread_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/author_text_color"
            android:layout_marginTop="4dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/thread_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/description_text_color"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/thread_item_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/date_text_color"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>